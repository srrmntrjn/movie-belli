// Movie Belli - Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Management
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  username  String?  @unique
  image     String?
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  watchlist     WatchlistItem[]
  watched       WatchedMovie[]
  reviews       Review[]
  ratings       Rating[]
  lists         MovieList[]

  // Friendships (self-referential many-to-many)
  friendsInitiated Friendship[] @relation("FriendshipInitiator")
  friendsReceived  Friendship[] @relation("FriendshipReceiver")

  // Activity
  activities Activity[]
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Movie Tracking
model WatchlistItem {
  id       String   @id @default(cuid())
  userId   String
  tmdbId   Int
  addedAt  DateTime @default(now())
  priority Int? // Optional: 1-5 for "want to watch badly"

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, tmdbId])
  @@index([userId])
  @@index([tmdbId])
}

model WatchedMovie {
  id        String   @id @default(cuid())
  userId    String
  tmdbId    Int
  watchedAt DateTime @default(now())
  rewatched Boolean  @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, tmdbId])
  @@index([userId])
  @@index([tmdbId])
}

// Reviews & Ratings
model Rating {
  id        String   @id @default(cuid())
  userId    String
  tmdbId    Int
  rating    Float // 0.5 to 5.0 (half-star increments)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  review Review?

  @@unique([userId, tmdbId])
  @@index([userId])
  @@index([tmdbId])
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  tmdbId    Int
  ratingId  String   @unique
  content   String   @db.Text
  spoiler   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating Rating       @relation(fields: [ratingId], references: [id], onDelete: Cascade)
  likes  ReviewLike[]

  @@index([userId])
  @@index([tmdbId])
}

model ReviewLike {
  id        String   @id @default(cuid())
  reviewId  String
  userId    String
  createdAt DateTime @default(now())

  review Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  @@unique([reviewId, userId])
  @@index([reviewId])
}

// Social Features
model Friendship {
  id          String           @id @default(cuid())
  initiatorId String
  receiverId  String
  status      FriendshipStatus @default(PENDING)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  initiator User @relation("FriendshipInitiator", fields: [initiatorId], references: [id], onDelete: Cascade)
  receiver  User @relation("FriendshipReceiver", fields: [receiverId], references: [id], onDelete: Cascade)

  @@unique([initiatorId, receiverId])
  @@index([initiatorId])
  @@index([receiverId])
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}

// Custom Lists
model MovieList {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?  @db.Text
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user   User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  movies MovieListItem[]

  @@index([userId])
}

model MovieListItem {
  id      String   @id @default(cuid())
  listId  String
  tmdbId  Int
  order   Int
  addedAt DateTime @default(now())

  list MovieList @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@unique([listId, tmdbId])
  @@index([listId])
}

// Activity Feed
model Activity {
  id        String       @id @default(cuid())
  userId    String
  type      ActivityType
  tmdbId    Int?
  metadata  Json? // Flexible field for additional data
  createdAt DateTime     @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

enum ActivityType {
  ADDED_TO_WATCHLIST
  MARKED_AS_WATCHED
  RATED_MOVIE
  REVIEWED_MOVIE
  CREATED_LIST
  ADDED_FRIEND
}
